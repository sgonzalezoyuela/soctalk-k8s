DATABASE_URL=postgresql+asyncpg://soctalk:STRONG_PASSWORD_HERE@postgres:5432/soctalk

# =============================================================================
# LLM Provider Secrets
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-xxx
